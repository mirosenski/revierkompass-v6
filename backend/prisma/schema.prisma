generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model PoliceStation {
  id           String   @id @default(cuid())
  name         String
  type         String
  city         String
  address      String?
  coordinates  String?
  telefon      String?
  email        String?
  notdienst24h Boolean  @default(false)
  isActive     Boolean  @default(true)
  parentId     String?
  lastModified DateTime @default(now()) @updatedAt
}

